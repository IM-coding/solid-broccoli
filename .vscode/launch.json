{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "script.py",
                "FLASK_DEBUG": "1",
                "GIT_PYTHON_REFRESH": "quiet"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "-h",
                "localhost",
                "-p",
                "5000"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}